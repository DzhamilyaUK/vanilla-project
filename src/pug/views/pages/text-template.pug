//- text-content.pug
article.text-content
  header.text-content__header
    h1.text-h1.text-content__title Text Content

  .text-content__body
    //- Paragraph
    section.text-content__section
      p.text-body Lorem ipsum dolor sit amet...

    //- List
    section.text-content__section
      ul.text-content__list
        li.text-content__list-item Item 1
        li.text-content__list-item Item 2

    //- Table
    section.text-content__section
      .text-content__table-wrap
        table.text-content__table
          thead
            tr
              th Header 1
              th Header 2
          tbody
            tr
              td Data 1
              td Data 2

    //- Image
    section.text-content__section
      figure.text-content__image
        img(src="image.jpg" alt="Description")
        figcaption.text-caption Image caption

    //- Headings
    h2.text-h2 Heading 2
    h3.text-h3 Heading 3