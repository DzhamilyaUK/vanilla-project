  //- Контейнер для тегов
  .tags-container
    +tag Tag
    +tag({tag: 'a'})(href='#') Tag
    +tag({dense: true}) Tag
    +tag({dense: true, tag: 'a'})(href='#') Tag
    +tag({dense: true, color: '#0EBEF1'}) Tag
