    include ../../assets/icons/link.svg
  //- Примеры использования ссылок
  div.links-section
    h2 Примеры ссылок
    div.links-container

      +link({icon: 'link'})(href='#', data-attr, aria-label='link') Link
      +link({href: '#', large: true, icon: 'link'}) Link

      +link({href: '#'}) Link
      +link({href: '#', large: true}) Link

      +link({href: '#', bold: true, icon: 'socials'}) Link

